# unix
alias l='ls'
alias ll='ls -al'
alias lh='ls -Alh'
alias issh='ssh -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null'
alias stow='stow --ignore ".DS_Store"'
alias dotfiles='stow -d ~/.dotfiles'
alias vidl='youtube-dl --no-mtime'
alias s='ssh -4 -o PreferredAuthentications=publickey ng'
alias rmdstore='find . -name ".DS_Store" -depth -exec rm {} \;'

# tmux
alias tmux='tmux -u'

# ruby
alias bo="bundle open"

